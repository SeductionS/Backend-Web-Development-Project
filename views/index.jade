extends layout
block content
    nav
        div(class="nav-wrapper materialize-twitter third")
            a(class="brand-logo materialize-twitter-text secondary" href="#")=title
            ul(id="nav-mobile" class="right side-nav materialize-twitter third")
                li
                    a(href="#") nav1
                li
                    a(href="#") nav2
            a(class="button-collapse" href="#" data-activates="nav-mobile")
                i(class="mdi-navigation-menu")
    section(class="wall")
        div(class="row")
            each tweet in data
                div(class="col s12 m3")
                    div(class="card")
                        div(class="card-image")
                            img(src=tweet.bannerUrl)
                            span(class="card-title") #{tweet.userName}
                        div(class="card-content white")
                            img(src=tweet.imageUrl)
                            p= tweet.text


